{
  "detector": {
    "confidence_threshold": 0.15,
    "confidence_threshold_description": "Uzak drone'lar için düşük eşik",
    "enable_edgs": true,
    "multi_scale": true,
    "multi_scale_description": "Uzak drone tespiti için gerekli",
    "scales": [0.5, 0.75, 1.0],
    "scales_description": "Daha küçük ölçekler uzak nesneler için"
  },
  "classifier": {
    "drone_sensitivity": 1.2,
    "drone_min_confidence": 0.15,
    "filter_non_drones": true,
    "classes_to_filter": ["airplane", "helicopter", "bird"],
    "drone_size_range": [10, 50000],
    "drone_size_tolerance": 0.7
  },
  "tracking": {
    "max_age": 200,
    "min_hits": 1,
    "iou_threshold": 0.1,
    "iou_threshold_description": "Uzak nesneler için düşük IoU"
  },
  "performance": {
    "frame_skip": 2,
    "saliency_interval": 3,
    "ui_fps": 30,
    "use_gpu": true
  },
  "night_vision": {
    "enabled": true,
    "clahe_clip_limit": 4.0,
    "gamma": 2.0,
    "brightness_threshold": 60
  },
  "background_subtraction": {
    "enabled": true,
    "history": 300,
    "var_threshold": 16,
    "detect_shadows": true
  },
  "recommendations": {
    "uzak_drone_tespiti": {
      "confidence_threshold": "0.10-0.20",
      "multi_scale": "true",
      "edgs": "true",
      "frame_skip": "1-2"
    },
    "yakin_drone_tespiti": {
      "confidence_threshold": "0.30-0.40",
      "multi_scale": "false",
      "edgs": "true",
      "frame_skip": "2-3"
    },
    "dengeli_tespit": {
      "confidence_threshold": "0.15-0.25",
      "multi_scale": "true",
      "edgs": "true",
      "frame_skip": "2"
    }
  }
}